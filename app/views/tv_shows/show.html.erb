<%= render 'search' %>
<div class="container tv-show">
  <div class="row tv-show-content jumbotron">
    <div class="col-lg-3 offset-lg-1 col-md-4">
      <!-- Poster -->
      <%= image_tag(poster_present?(@result.poster_path), size: '200x300', class: 'mb-4') %>
    </div>
    <div class="col-md-8">
      <!-- Title -->
      <h3 style="line-height: 1.5"><%= @result.name %> (<%= first_air(@result.first_air_date).split.last %>)</h3>
      <!-- Rating & Genres -->
      <%= render 'tv_attrs/genre', :results => @results %>
      <!-- Overview -->
      <%= render 'tv_attrs/overview', :results => @results %>
      <div class="row">
        <!-- Created By -->
        <%= render 'tv_attrs/creator', :results => @results %>
        <!-- Series -->
        <%= render 'tv_attrs/series', :results => @results %>
        <!-- Runtime -->
        <%= render 'tv_attrs/runtime', :results => @results %>
        <!-- Networks -->
        <%= render 'tv_attrs/network', :results => @results %>
      </div>
    </div>
  </div>
</div>
