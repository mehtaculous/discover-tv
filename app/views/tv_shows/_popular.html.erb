<div id="popular" class="container index-content">
  <div class="row">
    <div class="col-md-12 text-center">
      <h3 style="padding-top: 20px">Popular TV Shows</h3>
    </div>
  </div>
  <div class="row">
    <% @results.each do |show| %>
      <div class="col-lg-4 text-center">
        <div class="card">
          <h5 class="card-header"><%= show.original_name %></h5>
          <%= link_to image_tag("https://image.tmdb.org/t/p/w780/" + show.backdrop_path, class: "card-img-top"), tv_path %>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><%= show.first_air_date.to_date.strftime('%B %-d, %Y') %></li>
            <li class="list-group-item">
              <% show.genre_ids.each do |id| %>
                <span class="badge badge-pill badge-light my-1"><%= genre(id) %></span>
              <% end %>
            </li>
          </ul>
          <div class="card-body">
            <button type="button" class="btn btn-<%= rating(show.vote_average * 10) %>">
              <span><%= (show.vote_average * 10).to_int %>%</span>
            </button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
