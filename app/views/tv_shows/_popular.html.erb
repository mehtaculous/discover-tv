<div id="popular" class="container index-content">
  <div class="row">
    <div class="col-md-12 text-center">
      <h3 style="padding-top: 20px">Popular TV Shows</h3>
    </div>
  </div>
  <div class="row">
    <% @results.each do |show| %>
      <div class="col-md-6 col-lg-4 text-center">
        <div class="card">
          <h5 class="card-header"><%= show.original_name %></h5>
          <%= link_to image_tag(TvShowsHelper::BASE_URL + 'w780' + show.backdrop_path, class: "card-img"), tv_path %>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><%= first_air(show.first_air_date) %></li>
            <li class="list-group-item">
              <% show.genre_ids.each do |id| %>
                <span class="badge badge-pill badge-light my-1"><%= genre(id) %></span>
              <% end %>
            </li>
          </ul>
          <div class="card-body">
            <button type="button" class="btn btn-<%= rating_color(show.vote_average) %>">
              <span><%= rating_percentage(show.vote_average) %></span>
            </button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
