<div class="container">
  <% if flash[:notice] %>
    <div class="alert flash-message alert-success <%= current_page?(root_path) ? 'position-root' : 'position' %>">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:notice] %>
    </div>
  <% elsif flash[:alert] %>
    <div class="alert flash-message alert-warning <%= current_page?(root_path) ? 'position-root' : 'position' %>">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:alert] %>
    </div>
  <% end %>
</div>
